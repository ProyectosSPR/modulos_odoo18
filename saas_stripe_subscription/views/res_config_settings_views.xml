<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit settings to add Stripe subscription configuration -->
    <record id="res_config_settings_view_form_stripe_subscription" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.stripe.subscription</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Stripe Subscriptions"
                     string="Stripe Subscriptions" data-key="saas_stripe_subscription">

                    <h2>Stripe Subscription Integration</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="stripe_subscription_sync_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="stripe_subscription_sync_enabled"/>
                                <div class="text-muted">
                                    Automatically synchronize subscription lifecycle (create, update, cancel) with Stripe
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="stripe_product_auto_sync"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="stripe_product_auto_sync"/>
                                <div class="text-muted">
                                    Automatically create products in Stripe when used in subscriptions
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box"
                             invisible="not stripe_subscription_sync_enabled">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="stripe_subscription_provider_id"/>
                                <div class="text-muted">
                                    Default Stripe payment provider for subscription synchronization
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="stripe_subscription_provider_id"
                                               class="o_light_label"
                                               widget="selection"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

</odoo>
