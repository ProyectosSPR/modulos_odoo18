<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit product template form view to add Stripe fields -->
    <record id="view_product_template_form_stripe" model="ir.ui.view">
        <field name="name">product.template.form.stripe</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <!-- Add Stripe section in Sales tab -->
            <xpath expr="//page[@name='sales']" position="inside">
                <group string="Stripe Integration" name="stripe_integration">
                    <group>
                        <field name="stripe_auto_sync"/>
                        <field name="stripe_product_id" readonly="1"/>
                    </group>
                    <group>
                        <button name="action_sync_to_stripe"
                                string="Sync to Stripe"
                                type="object"
                                class="oe_highlight"
                                invisible="stripe_product_id"/>
                    </group>
                </group>
            </xpath>

        </field>
    </record>

</odoo>
