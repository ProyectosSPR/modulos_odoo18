<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend SaaS Instance Form with License Info -->
    <record id="view_saas_instance_license_form" model="ir.ui.view">
        <field name="name">saas.instance.license.form</field>
        <field name="model">saas.instance</field>
        <field name="inherit_id" ref="saas_management.view_saas_instance_form"/>
        <field name="arch" type="xml">
            <!-- Add License button to button box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_licenses" type="object"
                        class="oe_stat_button" icon="fa-file-text-o">
                    <field name="license_count" widget="statinfo" string="Licenses"/>
                </button>
                <button name="action_create_license_snapshot" type="object"
                        class="oe_stat_button" icon="fa-camera"
                        string="Snapshot"/>
            </xpath>

            <!-- Add warning banner for overages -->
            <xpath expr="//sheet" position="before">
                <div class="alert alert-warning" role="alert" invisible="not has_overages">
                    <strong>Usage Overages Detected!</strong>
                    <p>This instance is exceeding plan limits. <button name="action_view_licenses" type="object" class="btn-link">View License Records</button></p>
                </div>
            </xpath>

            <!-- Add company count to resources -->
            <xpath expr="//field[@name='current_users']" position="after">
                <field name="company_count"/>
            </xpath>

            <!-- Add licensing tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Licensing" name="licensing">
                    <group>
                        <group string="Latest Metrics">
                            <field name="latest_license_id" readonly="1"/>
                            <field name="has_overages" readonly="1"/>
                        </group>
                    </group>

                    <field name="license_ids" nolabel="1">
                        <list>
                            <field name="date"/>
                            <field name="user_count"/>
                            <field name="company_count"/>
                            <field name="storage_gb"/>
                            <field name="is_billable" widget="boolean_toggle"/>
                            <field name="overage_amount" widget="monetary"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
