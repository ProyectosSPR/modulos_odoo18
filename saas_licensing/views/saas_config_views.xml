<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SaaS Licensing Configuration Form -->
    <record id="view_saas_licensing_config_form" model="ir.ui.view">
        <field name="name">saas.licensing.config.form</field>
        <field name="model">saas.licensing.config</field>
        <field name="arch" type="xml">
            <form string="SaaS Licensing Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>Default Subscription Settings</h1>
                        <p class="text-muted">Configure default values for new subscription packages</p>
                    </div>

                    <group>
                        <group string="Pricing Model">
                            <field name="default_pricing_model" widget="radio"/>
                        </group>
                    </group>

                    <separator string="Base Pricing"/>
                    <group>
                        <group>
                            <field name="default_base_monthly_price" widget="monetary"/>
                        </group>
                        <group>
                            <field name="default_included_users"/>
                        </group>
                    </group>

                    <separator string="User Pricing"/>
                    <group>
                        <group>
                            <field name="default_price_per_user" widget="monetary"/>
                        </group>
                    </group>

                    <separator string="Usage Limits"/>
                    <group>
                        <group>
                            <field name="default_max_users"/>
                            <field name="default_max_companies"/>
                        </group>
                        <group>
                            <field name="default_max_storage_gb"/>
                        </group>
                    </group>

                    <separator string="Overage Pricing"/>
                    <group>
                        <group>
                            <field name="default_price_per_company" widget="monetary"/>
                        </group>
                        <group>
                            <field name="default_price_per_gb" widget="monetary"/>
                        </group>
                    </group>

                    <separator string="Billing Configuration"/>
                    <group>
                        <group>
                            <field name="default_auto_invoice"/>
                        </group>
                        <group>
                            <field name="default_invoice_on_overage"/>
                        </group>
                    </group>

                    <div class="alert alert-info" role="alert">
                        <strong>ℹ️ How it works:</strong>
                        <p>These values will be used as defaults when creating new Subscription Packages. You can always override them for specific packages.</p>
                    </div>
                </sheet>
                <footer>
                    <button name="action_save" string="Save" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_saas_licensing_config" model="ir.actions.act_window">
        <field name="name">Default Subscription Settings</field>
        <field name="res_model">saas.licensing.config</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_saas_licensing_config"
              name="Default Settings"
              parent="menu_saas_licensing"
              action="action_saas_licensing_config"
              sequence="100"/>
</odoo>
