<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="license_type_per_company" model="saas.license.type">
            <field name="name">Per Company License</field>
            <field name="code">PER_COMPANY</field>
            <field name="sequence">10</field>
            <field name="description">Billing based on number of companies managed</field>
            <field name="billing_model">per_company</field>
            <field name="default_max_companies">5</field>
            <field name="default_base_price">50.00</field>
            <field name="default_price_per_company">20.00</field>
        </record>

        <record id="license_type_per_user" model="saas.license.type">
            <field name="name">Per User License</field>
            <field name="code">PER_USER</field>
            <field name="sequence">20</field>
            <field name="description">Billing based on total active users</field>
            <field name="billing_model">per_user</field>
            <field name="default_max_companies">10</field>
            <field name="default_base_price">100.00</field>
            <field name="default_price_per_user">15.00</field>
        </record>

        <record id="license_type_unlimited" model="saas.license.type">
            <field name="name">Unlimited License</field>
            <field name="code">UNLIMITED</field>
            <field name="sequence">30</field>
            <field name="description">Fixed price for unlimited companies</field>
            <field name="billing_model">fixed</field>
            <field name="default_max_companies">999</field>
            <field name="default_base_price">500.00</field>
        </record>
    </data>
</odoo>
