<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- License Usage Pivot View -->
    <record id="view_saas_license_pivot" model="ir.ui.view">
        <field name="name">saas.license.pivot</field>
        <field name="model">saas.license</field>
        <field name="arch" type="xml">
            <pivot string="License Analysis">
                <field name="customer_id" type="row"/>
                <field name="license_type_id" type="col"/>
                <field name="current_companies" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- License Usage Graph View -->
    <record id="view_saas_license_graph" model="ir.ui.view">
        <field name="name">saas.license.graph</field>
        <field name="model">saas.license</field>
        <field name="arch" type="xml">
            <graph string="License Analysis" type="bar">
                <field name="customer_id"/>
                <field name="current_companies" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- License Analysis Action -->
    <record id="action_license_analysis" model="ir.actions.act_window">
        <field name="name">License Analysis</field>
        <field name="res_model">saas.license</field>
        <field name="view_mode">pivot,graph</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>
</odoo>
