<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Company Wizard Form -->
    <record id="view_license_add_company_wizard_form" model="ir.ui.view">
        <field name="name">license.add.company.wizard.form</field>
        <field name="model">license.add.company.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Company to License">
                <group>
                    <group string="License Information">
                        <field name="license_id" readonly="1"/>
                        <label for="current_companies"/>
                        <div class="o_row">
                            <field name="current_companies" readonly="1"/> / <field name="max_companies" readonly="1"/>
                        </div>
                    </group>
                </group>

                <group string="Company to Add">
                    <field name="company_id" options="{'no_create': True}"/>
                    <field name="monthly_price" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                </group>

                <footer>
                    <button string="Add Company" name="action_add_company" type="object"
                            class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"
                            data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
