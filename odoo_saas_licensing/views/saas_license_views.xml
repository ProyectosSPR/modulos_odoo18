<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SaaS License Form View -->
    <record id="view_saas_license_form" model="ir.ui.view">
        <field name="name">saas.license.form</field>
        <field name="model">saas.license</field>
        <field name="arch" type="xml">
            <form string="SaaS License">
                <header>
                    <button name="action_activate" string="Activate" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_suspend" string="Suspend" type="object"
                            invisible="state != 'active'"
                            confirm="Are you sure you want to suspend this license?"/>
                    <button name="action_add_company" string="Add Company" type="object"
                            class="btn-primary" invisible="state != 'active'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_companies" type="object"
                                class="oe_stat_button" icon="fa-building">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="current_companies"/> / <field name="max_companies"/>
                                </span>
                                <span class="o_stat_text">Companies</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="reference" readonly="1"/>
                        </h3>
                    </div>

                    <group>
                        <group name="customer" string="Customer">
                            <field name="customer_id" options="{'no_create': True}"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="license_type_id" options="{'no_create': True}"/>
                            <field name="billing_model" readonly="1"/>
                        </group>
                        <group name="limits" string="Limits">
                            <field name="max_companies"/>
                            <field name="current_companies" readonly="1"/>
                            <field name="company_usage_percent" widget="progressbar"/>
                            <field name="max_users_per_company"/>
                        </group>
                    </group>

                    <group name="pricing" string="Pricing">
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="base_price" widget="monetary"/>
                            <field name="price_per_company" widget="monetary"
                                   invisible="billing_model == 'fixed'"/>
                        </group>
                        <group>
                            <field name="price_per_user" widget="monetary"
                                   invisible="billing_model not in ['per_user', 'hybrid']"/>
                        </group>
                    </group>

                    <group name="subscription" string="Subscription Integration">
                        <field name="subscription_id" readonly="1"/>
                    </group>

                    <group name="dates" string="Dates">
                        <group>
                            <field name="date_created" readonly="1"/>
                            <field name="date_activated" readonly="1"/>
                        </group>
                        <group>
                            <field name="expiry_date"/>
                        </group>
                    </group>

                    <group name="alerts" string="Usage Alerts">
                        <field name="alert_threshold"/>
                        <field name="last_alert_date" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Licensed Companies" name="companies">
                            <field name="licensed_company_ids">
                                <tree decoration-muted="is_active == False">
                                    <field name="company_id"/>
                                    <field name="date_added"/>
                                    <field name="users_count"/>
                                    <field name="storage_used"/>
                                    <field name="is_active" widget="boolean_toggle"/>
                                    <button name="action_deactivate" string="Deactivate" type="object"
                                            icon="fa-times" invisible="is_active == False"/>
                                    <button name="action_activate" string="Activate" type="object"
                                            icon="fa-check" invisible="is_active == True"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="License notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- SaaS License Tree View -->
    <record id="view_saas_license_tree" model="ir.ui.view">
        <field name="name">saas.license.tree</field>
        <field name="model">saas.license</field>
        <field name="arch" type="xml">
            <tree string="SaaS Licenses"
                  decoration-success="state == 'active'"
                  decoration-warning="company_usage_percent >= alert_threshold"
                  decoration-danger="state == 'suspended'">
                <field name="reference"/>
                <field name="customer_id"/>
                <field name="license_type_id"/>
                <field name="current_companies"/>
                <field name="max_companies"/>
                <field name="company_usage_percent" widget="progressbar"/>
                <field name="base_price" widget="monetary"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-danger="state == 'suspended'"/>
                <field name="currency_id" column_invisible="True"/>
                <field name="alert_threshold" column_invisible="True"/>
            </tree>
        </field>
    </record>

    <!-- SaaS License Kanban View -->
    <record id="view_saas_license_kanban" model="ir.ui.view">
        <field name="name">saas.license.kanban</field>
        <field name="model">saas.license</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="state"/>
                <field name="current_companies"/>
                <field name="max_companies"/>
                <field name="company_usage_percent"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <br/>
                                    <small><field name="customer_id"/></small>
                                </div>
                                <span class="badge rounded-pill float-end"
                                      t-att-class="{'bg-success': record.state.raw_value == 'active',
                                                   'bg-danger': record.state.raw_value == 'suspended'}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="progress mb-2">
                                    <div class="progress-bar" role="progressbar"
                                         t-att-style="'width: ' + record.company_usage_percent.value + '%'"
                                         t-att-class="{'bg-success': record.company_usage_percent.value &lt; 70,
                                                      'bg-warning': record.company_usage_percent.value &gt;= 70 and record.company_usage_percent.value &lt; 90,
                                                      'bg-danger': record.company_usage_percent.value &gt;= 90}">
                                    </div>
                                </div>
                                <div>
                                    <field name="current_companies"/> / <field name="max_companies"/> Companies
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- SaaS License Search View -->
    <record id="view_saas_license_search" model="ir.ui.view">
        <field name="name">saas.license.search</field>
        <field name="model">saas.license</field>
        <field name="arch" type="xml">
            <search string="Search Licenses">
                <field name="reference"/>
                <field name="customer_id"/>
                <field name="license_type_id"/>
                <separator/>
                <filter string="Active" name="active" domain="[('state','=','active')]"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Suspended" name="suspended" domain="[('state','=','suspended')]"/>
                <separator/>
                <filter string="Near Limit" name="near_limit"
                        domain="[('company_usage_percent','>=',80)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by':'customer_id'}"/>
                    <filter string="License Type" name="group_type" context="{'group_by':'license_type_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- SaaS License Action -->
    <record id="action_saas_license" model="ir.actions.act_window">
        <field name="name">SaaS Licenses</field>
        <field name="res_model">saas.license</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first SaaS License
            </p>
            <p>
                Manage multi-company licenses with automatic billing based on usage.
            </p>
        </field>
    </record>
</odoo>
