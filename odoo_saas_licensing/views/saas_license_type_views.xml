<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- License Type Form View -->
    <record id="view_saas_license_type_form" model="ir.ui.view">
        <field name="name">saas.license.type.form</field>
        <field name="model">saas.license.type</field>
        <field name="arch" type="xml">
            <form string="License Type">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Per Company License"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="billing_model"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <group name="defaults" string="Default Values">
                        <group>
                            <field name="default_max_companies"/>
                            <field name="default_max_users"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="default_base_price" widget="monetary"/>
                            <field name="default_price_per_company" widget="monetary"
                                   invisible="billing_model == 'fixed'"/>
                            <field name="default_price_per_user" widget="monetary"
                                   invisible="billing_model not in ['per_user', 'hybrid']"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" placeholder="Description of this license type..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- License Type Tree View -->
    <record id="view_saas_license_type_tree" model="ir.ui.view">
        <field name="name">saas.license.type.tree</field>
        <field name="model">saas.license.type</field>
        <field name="arch" type="xml">
            <list string="License Types">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="billing_model"/>
                <field name="default_max_companies"/>
                <field name="default_base_price" widget="monetary"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="currency_id" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- License Type Action -->
    <record id="action_saas_license_type" model="ir.actions.act_window">
        <field name="name">License Types</field>
        <field name="res_model">saas.license.type</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>
</odoo>
