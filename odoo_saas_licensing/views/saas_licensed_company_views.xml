<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Licensed Company Form View -->
    <record id="view_saas_licensed_company_form" model="ir.ui.view">
        <field name="name">saas.licensed.company.form</field>
        <field name="model">saas.licensed.company</field>
        <field name="arch" type="xml">
            <form string="Licensed Company">
                <header>
                    <button name="action_activate" string="Activate" type="object"
                            class="oe_highlight" invisible="is_active == True"/>
                    <button name="action_deactivate" string="Deactivate" type="object"
                            invisible="is_active == False"/>
                </header>
                <sheet>
                    <group>
                        <group name="company">
                            <field name="license_id" options="{'no_create': True}"/>
                            <field name="customer_id" readonly="1"/>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="is_active" widget="boolean_toggle"/>
                        </group>
                        <group name="dates">
                            <field name="date_added" readonly="1"/>
                            <field name="date_deactivated" readonly="1"
                                   invisible="is_active == True"/>
                        </group>
                    </group>

                    <group name="usage" string="Usage Tracking">
                        <group>
                            <field name="users_count" readonly="1"/>
                            <field name="storage_used"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="monthly_price" widget="monetary"/>
                        </group>
                    </group>

                    <group>
                        <field name="notes" placeholder="Notes about this company..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Licensed Company Tree View -->
    <record id="view_saas_licensed_company_tree" model="ir.ui.view">
        <field name="name">saas.licensed.company.tree</field>
        <field name="model">saas.licensed.company</field>
        <field name="arch" type="xml">
            <tree string="Licensed Companies"
                  decoration-muted="is_active == False">
                <field name="company_id"/>
                <field name="license_id"/>
                <field name="customer_id"/>
                <field name="date_added"/>
                <field name="users_count"/>
                <field name="storage_used"/>
                <field name="is_active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Licensed Company Action -->
    <record id="action_saas_licensed_company" model="ir.actions.act_window">
        <field name="name">Licensed Companies</field>
        <field name="res_model">saas.licensed.company</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_active','=',True)]</field>
    </record>
</odoo>
