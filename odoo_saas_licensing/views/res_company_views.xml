<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Company Form - License Extension -->
    <record id="view_res_company_form_license" model="ir.ui.view">
        <field name="name">res.company.form.license</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_settings']" position="after">
                <page string="License Info" name="license" invisible="is_licensed == False">
                    <group>
                        <group>
                            <field name="is_licensed" widget="boolean_toggle"/>
                            <field name="licensed_company_id" readonly="1"
                                   invisible="is_licensed == False"/>
                        </group>
                        <group>
                            <field name="license_id" readonly="1"
                                   invisible="is_licensed == False"/>
                            <field name="license_customer_id" readonly="1"
                                   invisible="is_licensed == False"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
