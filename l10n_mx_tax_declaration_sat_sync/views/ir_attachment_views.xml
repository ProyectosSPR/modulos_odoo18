<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extensión de la vista de attachments -->
    <record id="view_ir_attachment_form_tax_declaration" model="ir.ui.view">
        <field name="name">ir.attachment.form.tax.declaration</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="l10n_mx_sat_sync_itadmin.view_attachment_cfdi_form"/>
        <field name="arch" type="xml">
            <!-- Agregar botón para marcar facturas relacionadas -->
            <xpath expr="//header" position="inside">
                <button name="action_mark_related_invoices_for_declaration"
                        string="Marcar para Declaración"
                        type="object"
                        class="btn-secondary"
                        invisible="uuid == False"/>
            </xpath>

            <!-- Agregar campo de auto-marcado -->
            <xpath expr="//field[@name='uuid']" position="after">
                <field name="auto_mark_for_tax_declaration"/>
            </xpath>
        </field>
    </record>

</odoo>
