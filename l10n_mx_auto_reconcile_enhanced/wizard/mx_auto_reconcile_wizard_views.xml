<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mx_auto_reconcile_wizard_form" model="ir.ui.view">
        <field name="name">mx.auto.reconcile.wizard.form</field>
        <field name="model">mx.auto.reconcile.wizard</field>
        <field name="arch" type="xml">
            <form string="Conciliación Automática">
                <sheet>
                    <group>
                        <group string="Período">
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group string="Filtros">
                            <field name="journal_ids" widget="many2many_tags"/>
                            <field name="source_type"/>
                            <field name="only_unreconciled"/>
                        </group>
                    </group>
                    <group>
                        <group string="Reglas">
                            <field name="apply_direct_rules"/>
                            <field name="apply_relation_rules"/>
                        </group>
                        <group string="Configuración">
                            <field name="min_match_score" widget="progressbar"/>
                        </group>
                    </group>

                    <notebook invisible="total_processed == 0">
                        <page string="Resultados">
                            <group>
                                <group>
                                    <field name="total_processed" readonly="1"/>
                                    <field name="total_matched" readonly="1"/>
                                </group>
                                <group>
                                    <field name="total_suggestions" readonly="1"/>
                                    <field name="total_unmatched" readonly="1"/>
                                </group>
                            </group>
                            <div class="row mt-3">
                                <div class="col-4">
                                    <button name="action_review_suggestions" 
                                            string="Revisar Sugerencias" 
                                            type="object" 
                                            class="btn-info btn-block"
                                            invisible="total_suggestions == 0"/>
                                </div>
                                <div class="col-4">
                                    <button name="action_mark_non_deductible_wizard" 
                                            string="Marcar No Deducibles" 
                                            type="object" 
                                            class="btn-warning btn-block"
                                            invisible="total_unmatched == 0"/>
                                </div>
                                <div class="col-4">
                                    <button name="action_open_full_reconcile_view" 
                                            string="Abrir Vista Completa" 
                                            type="object" 
                                            class="btn-secondary btn-block"/>
                                </div>
                            </div>
                        </page>
                    </notebook>

                    <footer>
                        <button name="action_run_reconciliation" 
                                string="Ejecutar Conciliación" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cerrar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mx_auto_reconcile_wizard" model="ir.actions.act_window">
        <field name="name">Conciliación Automática</field>
        <field name="res_model">mx.auto.reconcile.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
