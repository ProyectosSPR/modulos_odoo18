<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mx_mark_non_deductible_wizard_form" model="ir.ui.view">
        <field name="name">mx.mark.non.deductible.wizard.form</field>
        <field name="model">mx.mark.non.deductible.wizard</field>
        <field name="arch" type="xml">
            <form string="Marcar Pagos No Deducibles">
                <group>
                    <div class="alert alert-warning" role="alert">
                        <strong>Atención:</strong> Los pagos marcados como no deducibles
                        no se incluirán en los cálculos de la declaración fiscal.
                    </div>
                </group>

                <group>
                    <field name="deductible_reason"/>
                    <field name="notes" placeholder="Justificación adicional (opcional)"/>
                </group>

                <group string="Pagos a Marcar">
                    <field name="payment_ids" nolabel="1" widget="many2many_tags"/>
                </group>

                <group string="Líneas Bancarias" invisible="not statement_line_ids">
                    <field name="statement_line_ids" nolabel="1" widget="many2many_tags"/>
                </group>

                <footer>
                    <button name="action_mark_all"
                            string="Marcar como No Deducibles"
                            type="object"
                            class="btn-primary"
                            confirm="¿Estás seguro de marcar estos pagos como no deducibles?"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
