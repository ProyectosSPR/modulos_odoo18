<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mx_mark_non_deductible_wizard_form" model="ir.ui.view">
        <field name="name">mx.mark.non.deductible.wizard.form</field>
        <field name="model">mx.mark.non.deductible.wizard</field>
        <field name="arch" type="xml">
            <form string="Marcar Pagos No Deducibles">
                <group>
                    <div class="alert alert-warning" role="alert">
                        <strong>Atención:</strong> Los pagos marcados como no deducibles 
                        no se incluirán en los cálculos de la declaración fiscal.
                    </div>
                </group>
                
                <group>
                    <field name="deductible_reason"/>
                    <field name="notes" placeholder="Justificación adicional (opcional)"/>
                </group>
                
                <group string="Pagos a Marcar">
                    <field name="payment_ids" nolabel="1">
                        <tree editable="bottom" create="0">
                            <field name="date"/>
                            <field name="partner_id"/>
                            <field name="payment_ref"/>
                            <field name="amount"/>
                            <field name="mark_non_deductible" widget="boolean_toggle"/>
                        </tree>
                    </field>
                </group>
                
                <footer>
                    <button name="action_mark_selected" 
                            string="Marcar Seleccionados" 
                            type="object" 
                            class="btn-primary"/>
                    <button name="action_mark_all" 
                            string="Marcar Todos" 
                            type="object" 
                            class="btn-secondary"
                            confirm="¿Estás seguro de marcar TODOS los pagos listados como no deducibles?"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
