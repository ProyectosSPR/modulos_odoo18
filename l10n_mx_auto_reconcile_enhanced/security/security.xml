<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Grupo de Usuarios de Conciliación -->
        <record id="group_reconcile_user" model="res.groups">
            <field name="name">Conciliación Automática / Usuario</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
        </record>

        <!-- Grupo de Administradores de Conciliación -->
        <record id="group_reconcile_manager" model="res.groups">
            <field name="name">Conciliación Automática / Administrador</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_reconcile_user')), (4, ref('account.group_account_manager'))]"/>
        </record>

    </data>
</odoo>
