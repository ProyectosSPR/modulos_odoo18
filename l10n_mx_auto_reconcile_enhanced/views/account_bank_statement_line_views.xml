<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_statement_line_form_inherit_auto_reconcile" model="ir.ui.view">
        <field name="name">account.bank.statement.line.form.inherit.auto.reconcile</field>
        <field name="model">account.bank.statement.line</field>
        <field name="inherit_id" ref="account_reconcile_oca.bank_statement_line_form_reconcile_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_auto_reconcile"
                        string="Buscar Conciliación Automática"
                        type="object"
                        class="btn-secondary"
                        invisible="is_reconciled"/>
                <button name="action_show_suggestions"
                        string="Ver Sugerencia"
                        type="object"
                        class="btn-info"
                        invisible="not suggested_invoice_id or is_reconciled"/>
            </xpath>
            <xpath expr="//field[@name='payment_ref']" position="after">
                <field name="reconcile_match_score" widget="progressbar" invisible="not reconcile_match_score or is_reconciled"/>
                <field name="suggested_invoice_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
