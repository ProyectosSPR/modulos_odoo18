<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Form -->
    <record id="view_mx_reconcile_rule_form" model="ir.ui.view">
        <field name="name">mx.reconcile.rule.form</field>
        <field name="model">mx.reconcile.rule</field>
        <field name="arch" type="xml">
            <form string="Regla de Conciliación Directa">
                <header>
                    <button name="action_test_rule" string="Probar Regla" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Ej. Match por Referencia"/></h1>
                    </div>
                    <group>
                        <group string="Configuración Básica">
                            <field name="active" widget="boolean_toggle"/>
                            <field name="sequence"/>
                            <field name="priority" widget="priority"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Mapeo de Campos">
                            <field name="source_model"/>
                            <field name="source_field"/>
                            <field name="target_model"/>
                            <field name="target_field"/>
                        </group>
                    </group>
                    <group>
                        <group string="Lógica de Comparación">
                            <field name="match_type"/>
                            <field name="case_sensitive"/>
                            <field name="remove_spaces"/>
                            <field name="remove_special_chars"/>
                        </group>
                        <group string="Opciones Avanzadas">
                            <field name="min_similarity" widget="progressbar"/>
                            <field name="regex_pattern" invisible="match_type != 'regex'" required="match_type == 'regex'"/>
                            <field name="auto_reconcile"/>
                            <field name="require_manual_review"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Filtros Automáticos" name="filters">
                            <group>
                                <group string="Filtro de Líneas Bancarias/Pagos">
                                    <field name="source_domain_filter" widget="domain" nolabel="1"
                                           placeholder="Ejemplo: [('amount', '>', 1000), ('is_reconciled', '=', False)]"/>
                                    <div class="alert alert-info" role="alert">
                                        <strong>Filtros comunes:</strong><br/>
                                        • Solo no conciliados: <code>[('is_reconciled', '=', False)]</code><br/>
                                        • Montos mayores a 1000: <code>[('amount', '>', 1000)]</code><br/>
                                        • Con partner: <code>[('partner_id', '!=', False)]</code><br/>
                                        • Combinados: <code>[('amount', '>', 1000), ('is_reconciled', '=', False)]</code>
                                    </div>
                                </group>
                                <group string="Filtro de Facturas">
                                    <field name="target_domain_filter" widget="domain" nolabel="1"
                                           placeholder="Ejemplo: [('move_type', '=', 'out_invoice')]"/>
                                    <div class="alert alert-info" role="alert">
                                        <strong>Filtros comunes:</strong><br/>
                                        • Facturas de cliente: <code>[('move_type', '=', 'out_invoice')]</code><br/>
                                        • Facturas de proveedor: <code>[('move_type', 'in', ['in_invoice', 'in_refund'])]</code><br/>
                                        • No pagadas: <code>[('payment_state', 'in', ['not_paid', 'partial'])]</code><br/>
                                        • Por monto: <code>[('amount_total', '>', 5000)]</code>
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page string="Descripción">
                            <field name="description" placeholder="Describe cómo funciona esta regla..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="view_mx_reconcile_rule_tree" model="ir.ui.view">
        <field name="name">mx.reconcile.rule.tree</field>
        <field name="model">mx.reconcile.rule</field>
        <field name="arch" type="xml">
            <list string="Reglas de Conciliación Directa">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="source_field"/>
                <field name="target_field"/>
                <field name="match_type"/>
                <field name="priority" widget="priority"/>
                <field name="auto_reconcile" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_mx_reconcile_rule" model="ir.actions.act_window">
        <field name="name">Reglas de Conciliación Directa</field>
        <field name="res_model">mx.reconcile.rule</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera regla de conciliación directa
            </p>
            <p>
                Define reglas para comparar campos entre pagos y facturas (ej. Referencia vs Referencia).
            </p>
        </field>
    </record>
</odoo>
