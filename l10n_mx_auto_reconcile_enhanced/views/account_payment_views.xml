<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit_deductible" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.deductible</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_mark_non_deductible" 
                        string="Marcar No Deducible" 
                        type="object" 
                        class="btn-secondary"
                        invisible="not is_deductible"/>
            </xpath>
            <xpath expr="//group" position="after">
                <group string="Deducibilidad Fiscal" invisible="is_deductible">
                    <group>
                        <field name="is_deductible" widget="boolean_toggle"/>
                        <field name="deductible_reason" required="not is_deductible"/>
                    </group>
                    <group>
                        <field name="non_deductible_notes"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
