<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="l10n_mx_sat_sync_itadmin.ListView.Buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o_list_button_add')]" position="before">
            <button type="button" class="btn btn-secondary me-2" t-on-click="() => this.env.controller.onClickImportarXML()">Importar XML</button>
            <button type="button" class="btn btn-secondary me-2" t-on-click="() => this.env.controller.onClickDescargaXDia()">Descarga Dia</button>
            <button type="button" class="btn btn-secondary me-2" t-on-click="() => this.env.controller.onImportFIELSatInvoice()">Sincronizar SAT</button>
            <button type="button" class="btn btn-secondary me-2" t-on-click="() => this.env.controller.onClickSincronizarDocumentos()">Sincronizar documentos</button>
        </xpath>
    </t>

</templates>
