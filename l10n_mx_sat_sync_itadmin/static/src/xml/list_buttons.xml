<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="l10n_mx_sat_sync_itadmin.ListView.Buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_list_buttons')]" position="inside">
            <t t-if="typeof onClickImportarXML === 'function'">
                <button type="button" class="btn btn-secondary" t-on-click="onClickImportarXML">
                    <i class="fa fa-upload"/> Importar XML
                </button>
                <button type="button" class="btn btn-secondary" t-on-click="onClickDescargaXDia">
                    <i class="fa fa-calendar"/> Descarga Dia
                </button>
                <button type="button" class="btn btn-secondary" t-on-click="onImportFIELSatInvoice">
                    <i class="fa fa-refresh"/> Sincronizar SAT
                </button>
                <button type="button" class="btn btn-secondary" t-on-click="onClickSincronizarDocumentos">
                    <i class="fa fa-files-o"/> Sincronizar documentos
                </button>
            </t>
        </xpath>
    </t>

</templates>
