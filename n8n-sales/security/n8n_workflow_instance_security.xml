<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record Rule: Usuario solo ve sus propias instancias -->
    <record id="n8n_workflow_instance_user_rule" model="ir.rule">
        <field name="name">N8N Workflow Instance: Usuario ve sus propias instancias</field>
        <field name="model_id" ref="model_n8n_workflow_instance"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Record Rule: Administradores y vendedores ven todo -->
    <record id="n8n_workflow_instance_manager_rule" model="ir.rule">
        <field name="name">N8N Workflow Instance: Manager ve todas las instancias</field>
        <field name="model_id" ref="model_n8n_workflow_instance"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
