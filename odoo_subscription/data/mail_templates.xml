<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_subscription_renewal" model="mail.template">
            <field name="name">Subscription: Renewal Alert</field>
            <field name="model_id" ref="model_subscription_package"/>
            <field name="subject">Subscription Renewal: ${object.name}</field>
            <field name="body_html"><![CDATA[
                <p>Hello ${object.partner_id.name},</p>
                <p>Your subscription <strong>${object.name}</strong> is up for renewal.</p>
                <p>Next invoice date: ${object.next_invoice_date}</p>
                <p>Total amount: ${object.total_with_tax} ${object.currency_id.symbol}</p>
                <p>Thank you for your business!</p>
            ]]></field>
        </record>
    </data>
</odoo>
