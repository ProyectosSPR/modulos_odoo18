<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        NOTE: This module EXTENDS subscription_package groups
        Instead of creating new groups, we inherit and add SaaS-specific permissions
    -->

    <!-- Extend Subscription User to include SaaS User permissions -->
    <record id="subscription_package.group_subscription_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('odoo_saas_core.group_saas_user'))]"/>
    </record>

    <!-- Extend Subscription Manager to include SaaS Manager permissions -->
    <record id="subscription_package.group_subscription_manager" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('odoo_saas_core.group_saas_manager'))]"/>
    </record>
</odoo>
