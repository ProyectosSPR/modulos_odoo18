<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Subscription Menu -->
    <menuitem id="menu_subscription_root"
              name="Subscriptions"
              sequence="20"
              web_icon="odoo_subscription,static/description/icon.png"/>

    <!-- Subscriptions Submenu -->
    <menuitem id="menu_subscriptions"
              name="Subscriptions"
              parent="menu_subscription_root"
              sequence="10"/>

    <menuitem id="menu_subscription_packages"
              name="Subscriptions"
              parent="menu_subscriptions"
              action="action_subscription_package"
              sequence="10"/>

    <menuitem id="menu_subscription_to_renew"
              name="To Renew"
              parent="menu_subscriptions"
              action="action_subscription_package"
              sequence="20"/>

    <menuitem id="menu_subscription_metering"
              name="Usage Metering"
              parent="menu_subscriptions"
              action="action_subscription_metering"
              sequence="30"/>

    <!-- Configuration Submenu -->
    <menuitem id="menu_subscription_configuration"
              name="Configuration"
              parent="menu_subscription_root"
              sequence="90"
              groups="base.group_system"/>

    <menuitem id="menu_subscription_plans"
              name="Subscription Plans"
              parent="menu_subscription_configuration"
              action="action_subscription_plan"
              sequence="10"/>

    <menuitem id="menu_subscription_stages"
              name="Stages"
              parent="menu_subscription_configuration"
              action="action_subscription_stage"
              sequence="20"/>

    <menuitem id="menu_subscription_stop_reasons"
              name="Stop Reasons"
              parent="menu_subscription_configuration"
              action="action_subscription_stop_reason"
              sequence="30"/>

    <!-- Reporting Submenu -->
    <menuitem id="menu_subscription_reporting"
              name="Reporting"
              parent="menu_subscription_root"
              sequence="80"/>

    <menuitem id="menu_subscription_analysis"
              name="Subscription Analysis"
              parent="menu_subscription_reporting"
              action="action_subscription_analysis"
              sequence="10"/>
</odoo>
