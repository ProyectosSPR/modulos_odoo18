<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Template Form - Subscription Extension -->
    <record id="view_product_template_form_subscription" model="ir.ui.view">
        <field name="name">product.template.form.subscription</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Subscription" name="subscription" invisible="is_subscription == False">
                    <group>
                        <field name="is_subscription" widget="boolean_toggle"/>
                        <field name="subscription_plan_id" invisible="is_subscription == False"
                               options="{'no_create': True}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
