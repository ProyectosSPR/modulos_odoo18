<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Subscription Metering Form View -->
    <record id="view_subscription_metering_form" model="ir.ui.view">
        <field name="name">subscription.metering.form</field>
        <field name="model">subscription.metering</field>
        <field name="arch" type="xml">
            <form string="Usage Metering">
                <sheet>
                    <group>
                        <group name="subscription">
                            <field name="subscription_id" options="{'no_create': True}"/>
                            <field name="date"/>
                            <field name="metric_type"/>
                        </group>
                        <group name="pricing">
                            <field name="metric_value"/>
                            <field name="unit_price" widget="monetary"/>
                            <field name="total_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group name="invoicing">
                        <field name="invoiced" widget="boolean_toggle"/>
                        <field name="invoice_id" readonly="1" invisible="invoiced == False"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Subscription Metering Tree View -->
    <record id="view_subscription_metering_tree" model="ir.ui.view">
        <field name="name">subscription.metering.tree</field>
        <field name="model">subscription.metering</field>
        <field name="arch" type="xml">
            <tree string="Usage Metering" decoration-success="invoiced == True">
                <field name="date"/>
                <field name="subscription_id"/>
                <field name="metric_type"/>
                <field name="metric_value"/>
                <field name="unit_price" widget="monetary"/>
                <field name="total_amount" widget="monetary" sum="Total"/>
                <field name="invoiced" widget="boolean_toggle"/>
                <field name="currency_id" column_invisible="True"/>
            </tree>
        </field>
    </record>

    <!-- Subscription Metering Search View -->
    <record id="view_subscription_metering_search" model="ir.ui.view">
        <field name="name">subscription.metering.search</field>
        <field name="model">subscription.metering</field>
        <field name="arch" type="xml">
            <search string="Search Metering">
                <field name="subscription_id"/>
                <field name="metric_type"/>
                <separator/>
                <filter string="Not Invoiced" name="not_invoiced" domain="[('invoiced','=',False)]"/>
                <filter string="Invoiced" name="invoiced" domain="[('invoiced','=',True)]"/>
                <separator/>
                <filter string="This Month" name="this_month"
                        domain="[('date','&gt;=',datetime.datetime.now().strftime('%Y-%m-01'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Subscription" name="group_subscription" context="{'group_by':'subscription_id'}"/>
                    <filter string="Metric Type" name="group_metric" context="{'group_by':'metric_type'}"/>
                    <filter string="Date" name="group_date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Subscription Metering Action -->
    <record id="action_subscription_metering" model="ir.actions.act_window">
        <field name="name">Usage Metering</field>
        <field name="res_model">subscription.metering</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_not_invoiced': 1}</field>
    </record>
</odoo>
