<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Subscription Stage Form View -->
    <record id="view_subscription_stage_form" model="ir.ui.view">
        <field name="name">subscription.stage.form</field>
        <field name="model">subscription.stage</field>
        <field name="arch" type="xml">
            <form string="Subscription Stage">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="category"/>
                        <field name="is_fold"/>
                    </group>
                    <group>
                        <field name="condition" placeholder="Stage conditions and description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Subscription Stage Tree View -->
    <record id="view_subscription_stage_tree" model="ir.ui.view">
        <field name="name">subscription.stage.tree</field>
        <field name="model">subscription.stage</field>
        <field name="arch" type="xml">
            <list string="Subscription Stages" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category"/>
                <field name="is_fold"/>
            </list>
        </field>
    </record>

    <!-- Subscription Stage Action -->
    <record id="action_subscription_stage" model="ir.actions.act_window">
        <field name="name">Subscription Stages</field>
        <field name="res_model">subscription.stage</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Stop Reason Tree View -->
    <record id="view_subscription_stop_reason_tree" model="ir.ui.view">
        <field name="name">subscription.stop.reason.tree</field>
        <field name="model">subscription.stop.reason</field>
        <field name="arch" type="xml">
            <list string="Stop Reasons" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Stop Reason Action -->
    <record id="action_subscription_stop_reason" model="ir.actions.act_window">
        <field name="name">Stop Reasons</field>
        <field name="res_model">subscription.stop.reason</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
