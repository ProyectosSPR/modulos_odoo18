<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Subscription Upgrade Wizard Form -->
    <record id="view_subscription_upgrade_wizard_form" model="ir.ui.view">
        <field name="name">subscription.upgrade.wizard.form</field>
        <field name="model">subscription.upgrade.wizard</field>
        <field name="arch" type="xml">
            <form string="Upgrade/Downgrade Subscription">
                <group>
                    <group string="Current">
                        <field name="subscription_id" readonly="1"/>
                        <field name="current_plan_id" readonly="1"/>
                    </group>
                    <group string="New">
                        <field name="new_plan_id" options="{'no_create': True}"
                               domain="[('id', '!=', current_plan_id)]"/>
                        <field name="upgrade_date"/>
                    </group>
                </group>

                <group>
                    <field name="apply_prorate" widget="boolean_toggle"/>
                </group>

                <group>
                    <field name="notes" placeholder="Notes about this change..." nolabel="1"/>
                </group>

                <footer>
                    <button string="Apply Change" name="action_upgrade" type="object"
                            class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"
                            data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open upgrade wizard -->
    <record id="action_subscription_upgrade_wizard" model="ir.actions.act_window">
        <field name="name">Upgrade/Downgrade Plan</field>
        <field name="res_model">subscription.upgrade.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
