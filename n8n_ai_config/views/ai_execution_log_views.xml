<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista List -->
    <record id="view_ai_execution_log_list" model="ir.ui.view">
        <field name="name">ai.execution.log.list</field>
        <field name="model">ai.execution.log</field>
        <field name="arch" type="xml">
            <list string="Logs de Ejecución" create="false" edit="false">
                <field name="execution_date"/>
                <field name="agent_profile_id"/>
                <field name="partner_id"/>
                <field name="action_code"/>
                <field name="action_executed" widget="boolean"/>
                <field name="success" widget="boolean"
                       decoration-success="success == True"
                       decoration-danger="success == False"/>
                <field name="tokens_used" optional="show"/>
                <field name="execution_time_ms" optional="hide"/>
                <field name="cost" optional="hide" widget="monetary"/>
            </list>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_ai_execution_log_form" model="ir.ui.view">
        <field name="name">ai.execution.log.form</field>
        <field name="model">ai.execution.log</field>
        <field name="arch" type="xml">
            <form string="Log de Ejecución" create="false" edit="false">
                <header>
                    <field name="success" widget="boolean_button"
                           options="{'terminology': {'string_true': 'Éxito', 'string_false': 'Error'}}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="execution_date"/>
                            <field name="agent_profile_id"/>
                            <field name="partner_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="action_code"/>
                            <field name="action_executed"/>
                            <field name="tokens_used"/>
                            <field name="execution_time_ms"/>
                            <field name="cost" widget="monetary"/>
                        </group>
                    </group>

                    <group string="Mensaje de Entrada">
                        <field name="input_message" nolabel="1" widget="text"/>
                    </group>

                    <group string="Respuesta de IA">
                        <field name="ai_response" nolabel="1" widget="text"/>
                    </group>

                    <group string="Error" invisible="not error_message">
                        <field name="error_message" nolabel="1" widget="text"/>
                    </group>

                    <group string="Metadata" invisible="not metadata">
                        <field name="metadata" nolabel="1" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_ai_execution_log_search" model="ir.ui.view">
        <field name="name">ai.execution.log.search</field>
        <field name="model">ai.execution.log</field>
        <field name="arch" type="xml">
            <search string="Buscar Logs">
                <field name="agent_profile_id"/>
                <field name="action_code"/>
                <field name="partner_id"/>
                <filter string="Exitosos" name="success"
                        domain="[('success', '=', True)]"/>
                <filter string="Con Errores" name="errors"
                        domain="[('success', '=', False)]"/>
                <filter string="Con Acciones" name="with_actions"
                        domain="[('action_executed', '=', True)]"/>
                <separator/>
                <filter string="Hoy" name="today"
                        domain="[('execution_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Esta Semana" name="this_week"
                        domain="[('execution_date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Perfil" name="group_profile"
                            context="{'group_by': 'agent_profile_id'}"/>
                    <filter string="Usuario" name="group_user"
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Fecha" name="group_date"
                            context="{'group_by': 'execution_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_ai_execution_log" model="ir.actions.act_window">
        <field name="name">Logs de Ejecución</field>
        <field name="res_model">ai.execution.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>

</odoo>
