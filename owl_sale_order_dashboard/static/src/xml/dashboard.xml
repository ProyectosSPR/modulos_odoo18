<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl_sale_order_dashboard.SaleDashboard" owl="1">
        <!-- Main container with fixed height and scrolling -->
        <div class="o_sale_dashboard container-fluid h-100 d-flex flex-column overflow-auto">

            <!-- Fixed header section -->
            <div class="flex-shrink-0">
                <div class="d-flex justify-content-between align-items-center mb-4 pt-3">
                    <h2 class="mb-0">üìä Sales Dashboard</h2>
                    <div class="d-flex align-items-center">
                        <!-- Date Range Filter -->
                        <div class="me-2">
                            <small class="text-muted me-1">From:</small>
                            <input type="date" t-model="state.start_date" class="form-control form-control-sm d-inline-block" style="width: 140px;"/>
                        </div>
                        <div class="me-2">
                            <small class="text-muted me-1">To:</small>
                            <input type="date" t-model="state.end_date" class="form-control form-control-sm d-inline-block" style="width: 140px;"/>
                        </div>
                        <button class="btn btn-outline-primary btn-sm" t-on-click="refreshDashboard">
                            üîÑ Apply
                        </button>
                    </div>
                </div>

                <!-- Cards -->
                <div class="row mb-4">
                    <div class="col-xl-3 col-md-6 col-12 mb-3">
                        <div class="card shadow-lg border-primary h-100">
                            <div class="card-body text-center">
                                <h6 class="text-muted mb-2">üì¶ Total Orders</h6>
                                <h3 class="text-primary fw-bold mb-0"><t t-esc="state.total_orders"/></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 col-12 mb-3">
                        <div class="card shadow-lg border-info h-100">
                            <div class="card-body text-center">
                                <h6 class="text-muted mb-2">‚ùå Total Canceled Orders</h6>
                                <h3 class="text-danger fw-bold mb-0"><t t-esc="state.total_canceled"/></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 col-12 mb-3">
                        <div class="card shadow-lg border-warning h-100">
                            <div class="card-body text-center">
                                <h6 class="text-muted mb-2">üìù Not Invoiced Orders</h6>
                                <h3 class="text-secondary fw-bold mb-0"><t t-esc="state.total_not_invoiced"/></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 col-12 mb-3">
                        <div class="card shadow-lg border-success h-100">
                            <div class="card-body text-center">
                                <h6 class="text-muted mb-2">üí∞ Total Revenue</h6>
                                <h3 class="text-success fw-bold mb-0">$<t t-esc="state.total_revenue.toLocaleString()"/></h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- content section -->
            <div class="row flex-grow-1">
                <!-- Best Products -->
                <div class="col-xl-6 col-12 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header fw-bold d-flex justify-content-between align-items-center">
                            <span>üèÜ Best Selling Products</span>
                            <small class="text-muted">Top 5</small>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 col-12 order-2 order-md-1">
                                    <div class="table-responsive">
                                        <table class="table table-sm table-striped">
                                            <thead><tr><th>Product</th><th class="text-end">Qty</th></tr></thead>
                                            <tbody>
                                                <tr t-foreach="state.best_products" t-as="p" t-key="p_index">
                                                    <td class="text-truncate" style="max-width: 150px;"><t t-esc="p.name"/></td>
                                                    <td class="text-end"><t t-esc="p.qty"/></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12 order-1 order-md-2 mb-3 mb-md-0">
                                    <div class="chart-container" style="position: relative; height: 250px;">
                                        <canvas id="bestProductsChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Top Salespersons -->
                <div class="col-xl-6 col-12 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header fw-bold d-flex justify-content-between align-items-center">
                            <span>üíº Top Salespersons</span>
                            <small class="text-muted">Top 5</small>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 col-12 order-2 order-md-1">
                                    <div class="table-responsive">
                                        <table class="table table-sm table-striped">
                                            <thead><tr><th>Name</th><th class="text-end">Sales ($)</th></tr></thead>
                                            <tbody>
                                                <tr t-foreach="state.top_salespersons" t-as="s" t-key="s_index">
                                                    <td class="text-truncate" style="max-width: 150px;"><t t-esc="s.name"/></td>
                                                    <td class="text-end">$<t t-esc="s.total_sales.toLocaleString()"/></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12 order-1 order-md-2 mb-3 mb-md-0">
                                    <div class="chart-container" style="position: relative; height: 250px;">
                                        <canvas id="topSalespersonsChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Status Overview -->
                <div class="col-xl-6 col-12 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header fw-bold">üì¶ Order Status Overview</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 col-12 order-2 order-md-1">
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered">
                                            <thead><tr><th>Status</th><th class="text-end">Count</th></tr></thead>
                                            <tbody>
                                                <tr t-foreach="Object.entries(state.status_overview)" t-as="entry" t-key="entry[0]">
                                                    <td><t t-esc="entry[0]"/></td>
                                                    <td class="text-end"><t t-esc="entry[1]"/></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12 order-1 order-md-2 mb-3 mb-md-0">
                                    <div class="chart-container" style="position: relative; height: 250px;">
                                        <canvas id="statusOverviewChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Summary -->
                <div class="col-xl-6 col-12 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header fw-bold">üí≥ Payment Summary</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 col-12 order-2 order-md-1">
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered">
                                            <thead><tr><th>Status</th><th class="text-end">Amount ($)</th></tr></thead>
                                            <tbody>
                                                <tr t-foreach="Object.entries(state.payment_summary)" t-as="entry" t-key="entry[0]">
                                                    <td><t t-esc="entry[0]"/></td>
                                                    <td class="text-end">$<t t-esc="entry[1].toLocaleString()"/></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12 order-1 order-md-2 mb-3 mb-md-0">
                                    <div class="chart-container" style="position: relative; height: 250px;">
                                        <canvas id="paymentSummaryChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
