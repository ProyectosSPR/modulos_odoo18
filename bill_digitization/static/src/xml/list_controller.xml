<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="account.AccountViewUploadButton" t-inherit-mode="extension">
        <xpath expr="//AccountFileUploader" position="after">
            <!-- Add button for digitize the bill-->
            <t t-if="this.props.context.default_move_type == 'in_invoice'">
            <button type="button" class="btn btn-secondary" t-if="this.state.button_state"
                    t-on-click="onClickDigitize" data-tooltip="Digitize Bill">Digitize Bill</button>
                        </t>
        </xpath>
    </t>
</templates>
