<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Categoría de Módulo -->
        <record id="module_category_mx_tax_declaration" model="ir.module.category">
            <field name="name">Declaraciones Fiscales México</field>
            <field name="description">Gestión de declaraciones fiscales ante el SAT</field>
            <field name="sequence">50</field>
        </record>

        <!-- Grupo: Usuario -->
        <record id="group_mx_tax_declaration_user" model="res.groups">
            <field name="name">Usuario: Ver declaraciones</field>
            <field name="category_id" ref="module_category_mx_tax_declaration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Grupo: Contador -->
        <record id="group_mx_tax_declaration_accountant" model="res.groups">
            <field name="name">Contador: Crear declaraciones</field>
            <field name="category_id" ref="module_category_mx_tax_declaration"/>
            <field name="implied_ids" eval="[(4, ref('group_mx_tax_declaration_user')), (4, ref('account.group_account_user'))]"/>
        </record>

        <!-- Grupo: Manager -->
        <record id="group_mx_tax_declaration_manager" model="res.groups">
            <field name="name">Manager: Configurar obligaciones fiscales</field>
            <field name="category_id" ref="module_category_mx_tax_declaration"/>
            <field name="implied_ids" eval="[(4, ref('group_mx_tax_declaration_accountant')), (4, ref('account.group_account_manager'))]"/>
        </record>

        <!-- Reglas de registro multi-compañía -->
        <record id="mx_tax_obligation_company_rule" model="ir.rule">
            <field name="name">Obligaciones Fiscales Multi-Compañía</field>
            <field name="model_id" ref="model_mx_tax_obligation"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>
