<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Extend the Full Composer template to add a custom button -->
    <t t-inherit="mail.Composer.fullComposer" t-inherit-mode="extension">
        <xpath expr="//button[contains(@class, 'o-mail-Composer-fullComposer')]" position="after">
            <button class="btn btn-light fa fa-clock-o border-0 rounded-pill"
                    title="Schedule Mail"
                    aria-label="Schedule Mail"
                    type="button"
                    t-on-click="scheduleLogNote"/>
        </xpath>
    </t>
</templates>
