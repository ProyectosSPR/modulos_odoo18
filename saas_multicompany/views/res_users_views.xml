<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista heredada para usuarios SaaS - Oculta Access Rights -->
    <record id="view_users_form_saas_simplified" model="ir.ui.view">
        <field name="name">res.users.form.saas.simplified</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="groups_id" eval="[(4, ref('saas_management.group_saas_user'))]"/>
        <field name="arch" type="xml">
            <!-- Ocultar la pestaÃ±a de Access Rights (solo para usuarios SaaS, no admins) -->
            <page name="access_rights" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </page>

            <!-- Ocultar botones de estadÃ­sticas de permisos -->
            <button name="action_show_groups" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="action_show_accesses" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="action_show_rules" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
        </field>
    </record>
</odoo>
