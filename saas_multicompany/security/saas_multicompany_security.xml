<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- ========================================= -->
        <!-- Multi-Company Data Access Rules          -->
        <!-- ========================================= -->

        <!-- Regla: Usuarios internos SaaS pueden ver sus propias Ã³rdenes de venta -->
        <record id="sale_order_saas_user_rule" model="ir.rule">
            <field name="name">SaaS User: Own Sale Orders</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('partner_id', 'child_of', user.partner_id.commercial_partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regla: Usuarios internos SaaS pueden ver sus propias facturas -->
        <record id="account_move_saas_user_rule" model="ir.rule">
            <field name="name">SaaS User: Own Invoices</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[('partner_id', 'child_of', user.partner_id.commercial_partner_id.id), ('move_type', 'in', ['out_invoice', 'out_refund'])]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regla: Usuarios internos SaaS pueden ver sus propios pagos/transacciones -->
        <record id="payment_transaction_saas_user_rule" model="ir.rule">
            <field name="name">SaaS User: Own Payment Transactions</field>
            <field name="model_id" ref="payment.model_payment_transaction"/>
            <field name="domain_force">[('partner_id', 'child_of', user.partner_id.commercial_partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
