<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Multi-Company Data Isolation Rules -->

        <!-- Rule: Users can only see data from their assigned companies -->
        <record id="rule_multicompany_own_data" model="ir.rule">
            <field name="name">Multi-Company: Own Company Data Only</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', user.company_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Rule: Admins bypass restrictions -->
        <record id="rule_admin_all_data" model="ir.rule">
            <field name="name">Admin: All Data Access</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <!-- Rule: SaaS Companies - Own client only -->
        <record id="rule_saas_company_own_client" model="ir.rule">
            <field name="name">SaaS Company: Own Client Data</field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="domain_force">[
                '|',
                    ('is_saas_company', '=', False),
                    ('saas_client_id.partner_id.user_ids', 'in', [user.id])
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Rule: SaaS Manager can see all SaaS companies -->
        <record id="rule_saas_company_manager" model="ir.rule">
            <field name="name">SaaS Manager: All SaaS Companies</field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('saas_management.group_saas_manager'))]"/>
        </record>

    </data>
</odoo>
