<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- ========================================= -->
        <!-- Multi-Company Data Access Rules          -->
        <!-- Modelo de Seguridad:                     -->
        <!-- - Usuarios: Solo su empresa              -->
        <!-- - Admins: Acceso completo a todo         -->
        <!-- - Productos: EXCEPCIÓN - ven empresa padre -->
        <!-- ========================================= -->

        <!-- ================== PARTNERS ================== -->

        <!-- ADMIN & SaaS Manager: Full access (bypass all restrictions) -->
        <record id="rule_partner_admin_all" model="ir.rule">
            <field name="name">Partner: Admin Full Access</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system')), (4, ref('saas_management.group_saas_manager'))]"/>
        </record>

        <!-- READ: Regular users can ONLY see their own company -->
        <record id="rule_partner_read_multicompany" model="ir.rule">
            <field name="name">Partner: Read Own Company Only</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[
                '|', ('company_id', '=', False),
                     ('company_id', '=', user.company_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="global" eval="False"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- WRITE/CREATE/DELETE: Regular users can only modify their OWN company -->
        <record id="rule_partner_write_own_company" model="ir.rule">
            <field name="name">Partner: Write Only Own Company</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[
                '|', ('company_id', '=', False),
                     ('company_id', '=', user.company_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="global" eval="False"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ================== COMPANIES ================== -->

        <!-- ADMIN & SaaS Manager: Full access -->
        <record id="rule_company_admin_all" model="ir.rule">
            <field name="name">Company: Admin Full Access</field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system')), (4, ref('saas_management.group_saas_manager'))]"/>
        </record>

        <!-- READ: Users can ONLY see their own company -->
        <record id="rule_company_read_multicompany" model="ir.rule">
            <field name="name">Company: Read Own Company Only</field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="domain_force">[('id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="global" eval="False"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- WRITE: Users can modify their own company (NOT delete it) -->
        <record id="rule_company_write_own" model="ir.rule">
            <field name="name">Company: Write Only Own Company</field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="domain_force">[('id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="global" eval="False"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- ================== PRODUCTS ================== -->
        <!-- EXCEPCIÓN: Productos SÍ incluyen empresa padre para tienda online -->

        <!-- ADMIN & SaaS Manager: Full access -->
        <record id="rule_product_admin_all" model="ir.rule">
            <field name="name">Product: Admin Full Access</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system')), (4, ref('saas_management.group_saas_manager'))]"/>
        </record>

        <!-- READ: Users can see products from OWN company + PARENT company (for eCommerce) -->
        <record id="rule_product_read_multicompany" model="ir.rule">
            <field name="name">Product: Read Own and Parent Company</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">[
                '|', ('company_id', '=', False),
                '|', ('company_id', '=', user.company_id.id),
                     ('company_id', '=', user.company_id.parent_company_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="global" eval="False"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- WRITE/CREATE/DELETE: Users can only modify products from their OWN company -->
        <record id="rule_product_write_own_company" model="ir.rule">
            <field name="name">Product: Write Only Own Company</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">[
                '|', ('company_id', '=', False),
                     ('company_id', '=', user.company_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="global" eval="False"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ================== SALES ORDERS ================== -->

        <!-- ADMIN & SaaS Manager: Full access -->
        <record id="rule_sale_order_admin_all" model="ir.rule">
            <field name="name">Sale Order: Admin Full Access</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system')), (4, ref('saas_management.group_saas_manager'))]"/>
        </record>

        <!-- READ: Users can ONLY see sales orders from their own company -->
        <record id="rule_sale_order_read_multicompany" model="ir.rule">
            <field name="name">Sale Order: Read Own Company Only</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[
                '|', ('company_id', '=', False),
                     ('company_id', '=', user.company_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="global" eval="False"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- WRITE/CREATE/DELETE: Users can only modify sales orders from their own company -->
        <record id="rule_sale_order_write_own_company" model="ir.rule">
            <field name="name">Sale Order: Write Only Own Company</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[
                '|', ('company_id', '=', False),
                     ('company_id', '=', user.company_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="global" eval="False"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ================== INVOICES ================== -->

        <!-- ADMIN & SaaS Manager: Full access -->
        <record id="rule_invoice_admin_all" model="ir.rule">
            <field name="name">Invoice: Admin Full Access</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system')), (4, ref('saas_management.group_saas_manager'))]"/>
        </record>

        <!-- READ: Users can ONLY see invoices from their own company -->
        <record id="rule_invoice_read_multicompany" model="ir.rule">
            <field name="name">Invoice: Read Own Company Only</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[
                '|', ('company_id', '=', False),
                     ('company_id', '=', user.company_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
            <field name="global" eval="False"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- WRITE/CREATE/DELETE: Users can only modify invoices from their own company -->
        <record id="rule_invoice_write_own_company" model="ir.rule">
            <field name="name">Invoice: Write Only Own Company</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[
                '|', ('company_id', '=', False),
                     ('company_id', '=', user.company_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
            <field name="global" eval="False"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
