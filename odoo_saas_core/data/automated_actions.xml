<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron: Check Trial Expiry -->
        <record id="ir_cron_check_trial_expiry" model="ir.cron">
            <field name="name">SaaS: Check Trial Expiry</field>
            <field name="model_id" ref="model_saas_instance"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_trial_expiry()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron: Check Subscription Expiry -->
        <record id="ir_cron_check_subscription_expiry" model="ir.cron">
            <field name="name">SaaS: Check Subscription Expiry</field>
            <field name="model_id" ref="model_saas_instance"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_subscription_expiry()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
