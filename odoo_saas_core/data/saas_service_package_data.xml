<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Basic Package -->
        <record id="saas_package_basic" model="saas.service.package">
            <field name="name">Basic Plan</field>
            <field name="code">BASIC</field>
            <field name="sequence">10</field>
            <field name="description">Perfect for small businesses and startups</field>
            <field name="max_users">3</field>
            <field name="storage_gb">5.0</field>
            <field name="backup_frequency">weekly</field>
            <field name="monthly_price">29.00</field>
            <field name="yearly_price">290.00</field>
            <field name="setup_fee">0.00</field>
            <field name="custom_domain" eval="False"/>
            <field name="ssl_certificate" eval="True"/>
            <field name="api_access" eval="False"/>
            <field name="priority_support" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Professional Package -->
        <record id="saas_package_professional" model="saas.service.package">
            <field name="name">Professional Plan</field>
            <field name="code">PRO</field>
            <field name="sequence">20</field>
            <field name="description">Ideal for growing businesses with advanced needs</field>
            <field name="max_users">10</field>
            <field name="storage_gb">20.0</field>
            <field name="backup_frequency">daily</field>
            <field name="monthly_price">79.00</field>
            <field name="yearly_price">790.00</field>
            <field name="setup_fee">50.00</field>
            <field name="custom_domain" eval="True"/>
            <field name="ssl_certificate" eval="True"/>
            <field name="api_access" eval="True"/>
            <field name="priority_support" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Enterprise Package -->
        <record id="saas_package_enterprise" model="saas.service.package">
            <field name="name">Enterprise Plan</field>
            <field name="code">ENT</field>
            <field name="sequence">30</field>
            <field name="description">Complete solution for large organizations</field>
            <field name="max_users">50</field>
            <field name="storage_gb">100.0</field>
            <field name="backup_frequency">daily</field>
            <field name="monthly_price">199.00</field>
            <field name="yearly_price">1990.00</field>
            <field name="setup_fee">200.00</field>
            <field name="custom_domain" eval="True"/>
            <field name="ssl_certificate" eval="True"/>
            <field name="api_access" eval="True"/>
            <field name="priority_support" eval="True"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
