<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Multi-company rules for invoices -->
        <record id="saas_invoice_company_rule" model="ir.rule">
            <field name="name">SaaS: Invoice Multi-Company Rule</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="global" eval="True"/>
        </record>

        <!-- Multi-company rules for sales orders -->
        <record id="saas_sale_order_company_rule" model="ir.rule">
            <field name="name">SaaS: Sale Order Multi-Company Rule</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="global" eval="True"/>
        </record>

        <!-- Multi-company rules for contacts -->
        <record id="saas_partner_company_rule" model="ir.rule">
            <field name="name">SaaS: Partner Multi-Company Rule</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', '=', user.company_id.id)]</field>
            <field name="global" eval="True"/>
        </record>

        <!-- SaaS Customer access rules -->
        <record id="saas_customer_user_rule" model="ir.rule">
            <field name="name">SaaS Customer: User Access</field>
            <field name="model_id" ref="model_saas_customer"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_saas_user'))]"/>
        </record>

        <!-- SaaS Instance access rules -->
        <record id="saas_instance_user_rule" model="ir.rule">
            <field name="name">SaaS Instance: User Access</field>
            <field name="model_id" ref="model_saas_instance"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_saas_user'))]"/>
        </record>
    </data>
</odoo>
