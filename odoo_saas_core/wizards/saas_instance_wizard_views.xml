<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Provision Wizard Form -->
    <record id="view_saas_provision_wizard_form" model="ir.ui.view">
        <field name="name">saas.provision.wizard.form</field>
        <field name="model">saas.provision.wizard</field>
        <field name="arch" type="xml">
            <form string="Provision SaaS Access">
                <group>
                    <group string="Instance Information">
                        <field name="instance_id" readonly="1"/>
                        <field name="customer_id" readonly="1"/>
                        <field name="partner_id" readonly="1"/>
                        <field name="service_package_id" readonly="1"/>
                    </group>
                </group>

                <group string="Provisioning Options">
                    <group>
                        <field name="create_company" widget="boolean_toggle"/>
                        <field name="company_name" invisible="create_company == False"/>
                    </group>
                    <group>
                        <field name="assign_user_groups" widget="boolean_toggle"/>
                    </group>
                </group>

                <group string="Access Groups" invisible="assign_user_groups == False">
                    <field name="access_group_ids" widget="many2many_tags" nolabel="1"/>
                </group>

                <footer>
                    <button string="Provision" name="action_provision" type="object"
                            class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"
                            data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
