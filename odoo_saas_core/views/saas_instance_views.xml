<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SaaS Instance Form View -->
    <record id="view_saas_instance_form" model="ir.ui.view">
        <field name="name">saas.instance.form</field>
        <field name="model">saas.instance</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="SaaS Instance">
                <header>
                    <button name="action_activate" string="Activate" type="object"
                            class="oe_highlight" invisible="status != 'trial'"/>
                    <button name="action_extend_trial" string="Extend Trial" type="object"
                            invisible="status != 'trial'"/>
                    <button name="action_suspend" string="Suspend" type="object"
                            invisible="status not in ['trial','active']"
                            confirm="Are you sure you want to suspend this instance?"/>
                    <button name="action_terminate" string="Terminate" type="object"
                            invisible="status == 'terminated'"
                            confirm="Are you sure you want to terminate this instance?"/>
                    <button name="action_provision_access" string="Provision Access" type="object"
                            class="btn-primary" invisible="is_provisioned == True"/>
                    <field name="status" widget="statusbar"
                           statusbar_visible="trial,active,suspended"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Provisioned" bg_color="text-bg-success"
                            invisible="is_provisioned == False"/>
                    <widget name="web_ribbon" title="Trial" bg_color="text-bg-warning"
                            invisible="status != 'trial'"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Instance Name"/>
                        </h1>
                        <h3>
                            <field name="full_url" widget="url" placeholder="Will be generated from subdomain"/>
                        </h3>
                    </div>

                    <group>
                        <group string="Instance Information">
                            <field name="subdomain"/>
                            <field name="database_id" readonly="1"/>
                            <field name="odoo_version"/>
                            <field name="server_location"/>
                        </group>
                        <group string="Customer &amp; Package">
                            <field name="customer_id"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="service_package_id"/>
                            <field name="subscription_id" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Details" name="details">
                            <group>
                                <group string="Dates">
                                    <field name="date_created"/>
                                    <field name="date_activated"/>
                                    <field name="trial_end_date" invisible="status != 'trial'"/>
                                    <field name="subscription_end_date"/>
                                    <field name="days_until_expiry"/>
                                </group>
                                <group string="Billing">
                                    <field name="billing_cycle"/>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                </group>
                            </group>

                            <group string="Resource Usage">
                                <group>
                                    <label for="current_users"/>
                                    <div class="o_row">
                                        <field name="current_users"/> / <field name="max_users" readonly="1"/>
                                    </div>
                                    <field name="users_percentage" widget="progressbar"/>
                                </group>
                                <group>
                                    <label for="storage_used_gb"/>
                                    <div class="o_row">
                                        <field name="storage_used_gb"/> / <field name="max_storage_gb" readonly="1"/> GB
                                    </div>
                                    <field name="storage_percentage" widget="progressbar"/>
                                </group>
                            </group>

                            <group string="Provisioning Status" invisible="not is_provisioned">
                                <field name="is_provisioned" readonly="1"/>
                                <field name="provisioned_company_id" readonly="1"/>
                            </group>
                        </page>

                        <page string="Kubernetes" name="kubernetes">
                            <group>
                                <group string="Cluster &amp; Template">
                                    <field name="k8s_cluster_id"/>
                                    <field name="k8s_template_id" domain="[('cluster_id', '=', k8s_cluster_id)]"/>
                                </group>
                                <group string="Deployment Status">
                                    <field name="k8s_deployed" readonly="1"/>
                                    <field name="k8s_deployment_date" readonly="1" invisible="not k8s_deployed"/>
                                    <field name="k8s_pod_status" invisible="not k8s_deployed"/>
                                    <field name="k8s_pod_count" invisible="not k8s_deployed"/>
                                </group>
                            </group>

                            <group string="Kubernetes Resources">
                                <group>
                                    <field name="k8s_namespace"/>
                                    <field name="k8s_deployment_name"/>
                                    <field name="k8s_service_name"/>
                                </group>
                                <group>
                                    <field name="k8s_ingress_name"/>
                                    <field name="k8s_pvc_name"/>
                                </group>
                            </group>

                            <group string="Database Configuration">
                                <group>
                                    <field name="k8s_db_host"/>
                                    <field name="k8s_db_port"/>
                                </group>
                                <group>
                                    <field name="k8s_db_name"/>
                                    <field name="k8s_db_user"/>
                                    <field name="k8s_db_password" password="True"/>
                                </group>
                            </group>

                            <group string="Health &amp; Monitoring" invisible="not k8s_deployed">
                                <field name="k8s_last_health_check" readonly="1"/>
                                <field name="k8s_health_message" readonly="1"/>
                            </group>

                            <separator string="Actions" invisible="not k8s_cluster_id"/>
                            <div class="row" invisible="not k8s_cluster_id">
                                <div class="col-md-12">
                                    <button name="action_deploy_to_k8s" string="Deploy to Kubernetes" type="object"
                                            class="btn-primary mr-2" invisible="k8s_deployed"/>
                                    <button name="action_check_k8s_status" string="Check Status" type="object"
                                            class="btn-secondary mr-2" invisible="not k8s_deployed"/>
                                    <button name="action_view_k8s_manifests" string="View Manifests" type="object"
                                            class="btn-info mr-2"/>
                                    <button name="action_restart_k8s_pods" string="Restart Pods" type="object"
                                            class="btn-warning mr-2" invisible="not k8s_deployed"/>
                                    <button name="action_undeploy_from_k8s" string="Undeploy" type="object"
                                            class="btn-danger" invisible="not k8s_deployed"
                                            confirm="Are you sure you want to remove this instance from Kubernetes?"/>
                                </div>
                            </div>

                            <separator string="Generated Manifests" invisible="not k8s_manifests"/>
                            <field name="k8s_manifests" widget="text" readonly="1" invisible="not k8s_manifests"/>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Instance notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- SaaS Instance List View -->
    <record id="view_saas_instance_tree" model="ir.ui.view">
        <field name="name">saas.instance.list</field>
        <field name="model">saas.instance</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <    string="SaaS Instances"
                  decoration-success="status=='active'"
                  decoration-warning="status=='trial'"
                  decoration-danger="status in ['suspended','expired']"
                  decoration-muted="status=='terminated'">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="subdomain"/>
                <field name="full_url" widget="url"/>
                <field name="status" widget="badge"
                       decoration-success="status=='active'"
                       decoration-warning="status=='trial'"
                       decoration-danger="status in ['suspended','expired']"/>
                <field name="odoo_version"/>
                <field name="service_package_id"/>
            </  >
        </field>
    </record>

    <!-- Simplified Instance List for embedding in Customer form -->
    <record id="view_saas_instance_tree_embedded" model="ir.ui.view">
        <field name="name">saas.instance.list.embedded</field>
        <field name="model">saas.instance</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <list string="Customer Instances" create="false" edit="false">
                <field name="name"/>
                <field name="subdomain"/>
                <field name="status" widget="badge"/>
                <field name="odoo_version"/>
                <field name="date_created"/>
            </list>
        </field>
    </record>

    <!-- SaaS Instance Kanban View -->
    <record id="view_saas_instance_kanban" model="ir.ui.view">
        <field name="name">saas.instance.kanban</field>
        <field name="model">saas.instance</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="status"/>
                <field name="subdomain"/>
                <field name="current_users"/>
                <field name="max_users"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="subdomain"/>.domain
                                </div>
                                <div class="o_kanban_record_body">
                                    <t t-if="record.status.raw_value == 'active'">
                                        <span class="badge badge-success">Active</span>
                                    </t>
                                    <t t-elif="record.status.raw_value == 'trial'">
                                        <span class="badge badge-warning">Trial</span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge badge-secondary"><field name="status"/></span>
                                    </t>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span><field name="current_users"/> / <field name="max_users"/> users</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- SaaS Instance Search View -->
    <record id="view_saas_instance_search" model="ir.ui.view">
        <field name="name">saas.instance.search</field>
        <field name="model">saas.instance</field>
        <field name="arch" type="xml">
            <search string="Search SaaS Instances">
                <field name="name"/>
                <field name="subdomain"/>
                <field name="customer_id"/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Trial" name="trial" domain="[('status', '=', 'trial')]"/>
                <filter string="Suspended" name="suspended" domain="[('status', '=', 'suspended')]"/>
                <filter string="Provisioned" name="provisioned" domain="[('is_provisioned', '=', True)]"/>
                <separator/>
                <filter string="With K8s Cluster" name="has_k8s" domain="[('k8s_cluster_id', '!=', False)]"/>
                <filter string="Deployed to K8s" name="k8s_deployed" domain="[('k8s_deployed', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Service Package" name="group_package" context="{'group_by': 'service_package_id'}"/>
                    <filter string="K8s Cluster" name="group_k8s_cluster" context="{'group_by': 'k8s_cluster_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- SaaS Instance Action -->
    <record id="action_saas_instance" model="ir.actions.act_window">
        <field name="name">SaaS Instances</field>
        <field name="res_model">saas.instance</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first SaaS Instance
            </p>
            <p>
                SaaS instances represent deployed Odoo installations for your customers.
            </p>
        </field>
    </record>

    <!-- Explicit view references for action -->
    <record id="action_saas_instance_view_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_saas_instance_tree"/>
        <field name="act_window_id" ref="action_saas_instance"/>
    </record>

    <record id="action_saas_instance_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_saas_instance_kanban"/>
        <field name="act_window_id" ref="action_saas_instance"/>
    </record>

    <record id="action_saas_instance_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_saas_instance_form"/>
        <field name="act_window_id" ref="action_saas_instance"/>
    </record>
</odoo>
