<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Template Form View - SaaS Extension -->
    <record id="view_product_template_form_saas" model="ir.ui.view">
        <field name="name">product.template.form.saas</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="SaaS Configuration" name="saas_config" invisible="is_saas_product == False">
                    <group>
                        <group name="saas_basic" string="SaaS Settings">
                            <field name="is_saas_product" widget="boolean_toggle"/>
                            <field name="saas_package_id" invisible="is_saas_product == False"
                                   options="{'no_create': True}"/>
                            <field name="create_instance" invisible="is_saas_product == False"
                                   widget="boolean_toggle"/>
                            <field name="default_odoo_version"
                                   invisible="create_instance == False or is_saas_product == False"/>
                            <field name="trial_days" invisible="create_instance == False or is_saas_product == False"/>
                        </group>
                        <group name="saas_provisioning" string="Provisioning">
                            <field name="saas_creation_policy" invisible="is_saas_product == False"/>
                        </group>
                    </group>
                    <group name="saas_access" string="Access Control"
                           invisible="saas_creation_policy != 'create_user' or is_saas_product == False">
                        <field name="access_group_ids" widget="many2many_tags"
                               placeholder="Select security groups to assign..."/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
