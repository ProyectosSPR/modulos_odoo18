<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service Package Form View -->
    <record id="view_saas_service_package_form" model="ir.ui.view">
        <field name="name">saas.service.package.form</field>
        <field name="model">saas.service.package</field>
        <field name="arch" type="xml">
            <form string="Service Package">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_instances" type="object"
                                class="oe_stat_button" icon="fa-server">
                            <field name="instance_count" widget="statinfo" string="Instances"/>
                        </button>
                        <button name="action_view_products" type="object"
                                class="oe_stat_button" icon="fa-cube">
                            <field name="product_count" widget="statinfo" string="Products"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active == True"/>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Professional Plan"/>
                        </h1>
                    </div>

                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group name="pricing" string="Pricing">
                            <field name="currency_id" invisible="1"/>
                            <field name="monthly_price" widget="monetary"/>
                            <field name="yearly_price" widget="monetary"/>
                            <field name="yearly_discount_percent" widget="percentage"/>
                            <field name="setup_fee" widget="monetary"/>
                        </group>
                    </group>

                    <group name="resources" string="Resource Limits">
                        <group>
                            <field name="max_users"/>
                            <field name="storage_gb"/>
                        </group>
                        <group>
                            <field name="backup_frequency"/>
                        </group>
                    </group>

                    <group name="features" string="Features">
                        <group>
                            <field name="custom_domain" widget="boolean_toggle"/>
                            <field name="ssl_certificate" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="api_access" widget="boolean_toggle"/>
                            <field name="priority_support" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <group name="access_control" string="Access Control">
                        <field name="access_group_ids" widget="many2many_tags"
                               placeholder="Select security groups to assign to users..."/>
                    </group>

                    <group name="modules" string="Included Modules">
                        <field name="modules_included" widget="many2many_tags"
                               domain="[('state','=','installed')]"
                               placeholder="Select modules included in this package..."/>
                    </group>

                    <group name="description">
                        <field name="description" placeholder="Package description and features..." nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Package Tree View -->
    <record id="view_saas_service_package_tree" model="ir.ui.view">
        <field name="name">saas.service.package.tree</field>
        <field name="model">saas.service.package</field>
        <field name="arch" type="xml">
            <list string="Service Packages" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="max_users"/>
                <field name="storage_gb"/>
                <field name="monthly_price" widget="monetary"/>
                <field name="yearly_price" widget="monetary"/>
                <field name="instance_count"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="currency_id" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Service Package Kanban View -->
    <record id="view_saas_service_package_kanban" model="ir.ui.view">
        <field name="name">saas.service.package.kanban</field>
        <field name="model">saas.service.package</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="monthly_price"/>
                <field name="yearly_price"/>
                <field name="max_users"/>
                <field name="storage_gb"/>
                <field name="instance_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        [<field name="code"/>] <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body mt-2">
                                <div>
                                    <i class="fa fa-users"/> <field name="max_users"/> Users |
                                    <i class="fa fa-database"/> <field name="storage_gb"/> GB
                                </div>
                                <div class="mt-2">
                                    <strong><field name="monthly_price" widget="monetary"/>/month</strong>
                                </div>
                                <div>
                                    <field name="yearly_price" widget="monetary"/>/year
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2">
                                <div class="oe_kanban_bottom_left">
                                    <i class="fa fa-server"/> <field name="instance_count"/> instances
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Service Package Search View -->
    <record id="view_saas_service_package_search" model="ir.ui.view">
        <field name="name">saas.service.package.search</field>
        <field name="model">saas.service.package</field>
        <field name="arch" type="xml">
            <search string="Search Packages">
                <field name="name"/>
                <field name="code"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Backup Frequency" name="group_backup" context="{'group_by':'backup_frequency'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Service Package Action -->
    <record id="action_saas_service_package" model="ir.actions.act_window">
        <field name="name">Service Packages</field>
        <field name="res_model">saas.service.package</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Service Package
            </p>
            <p>
                Define service tiers with different features, resource limits, and pricing.
            </p>
        </field>
    </record>
</odoo>
