<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Form View - SaaS Extension -->
    <record id="view_sale_order_form_saas" model="ir.ui.view">
        <field name="name">sale.order.form.saas</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add SaaS statistic buttons -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_saas_instances" type="object"
                        class="oe_stat_button" icon="fa-server"
                        invisible="not is_saas_order or saas_instance_count == 0">
                    <field name="saas_instance_count" widget="statinfo" string="Instances"/>
                </button>
                <button name="action_view_saas_customer" type="object"
                        class="oe_stat_button" icon="fa-user-circle"
                        invisible="not saas_customer_id">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">SaaS Customer</span>
                    </div>
                </button>
            </xpath>

            <!-- Add SaaS fields after partner_id -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_saas_order" invisible="1"/>
                <field name="saas_customer_id" readonly="1"
                       invisible="not is_saas_order"/>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="context">{'show_saas_customer': True}</attribute>
            </xpath>

            <!-- Add SaaS Information Tab -->
            <xpath expr="//notebook" position="inside">
                <page string="SaaS Information" name="saas_info"
                      invisible="not is_saas_order">
                    <group>
                        <group name="saas_customer_group" string="SaaS Customer">
                            <field name="saas_customer_id" readonly="1"/>
                        </group>
                        <group name="saas_stats" string="Statistics">
                            <field name="saas_instance_count"/>
                        </group>
                    </group>
                    <group string="SaaS Instances Created">
                        <field name="saas_instance_ids" nolabel="1" readonly="1">
                            <list>
                                <field name="name"/>
                                <field name="subdomain"/>
                                <field name="full_url" widget="url"/>
                                <field name="status" widget="badge"
                                       decoration-success="status=='active'"
                                       decoration-warning="status=='trial'"
                                       decoration-danger="status in ['suspended','expired']"/>
                                <field name="service_package_id"/>
                                <field name="date_created"/>
                            </list>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
